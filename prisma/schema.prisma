generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
}

// NextAuth.js models
model User {
  id            String    @id @default(cuid())
  name          String?
  email         String?   @unique
  emailVerified DateTime? @map("email_verified")
  image         String?
  password      String?
  createdAt     DateTime  @default(now()) @map("created_at")
  updatedAt     DateTime  @updatedAt @map("updated_at")

  accounts      Account[]
  sessions      Session[]
  subscription  Subscription?
  transfers     Transfer[]

  @@map("users")
}

model Account {
  id                String  @id @default(cuid())
  userId            String  @map("user_id")
  type              String
  provider          String
  providerAccountId String  @map("provider_account_id")
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@map("accounts")
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique @map("session_token")
  userId       String   @map("user_id")
  expires      DateTime

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("sessions")
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
  @@map("verification_tokens")
}

// Subscription model
model Subscription {
  id                 String    @id @default(cuid())
  userId             String    @unique @map("user_id")
  plan               String    @default("free") // "free" or "unlimited"
  status             String    @default("active") // "active", "canceled", "past_due"
  stripeCustomerId   String?   @map("stripe_customer_id")
  stripeSubscriptionId String? @map("stripe_subscription_id")
  currentPeriodStart DateTime? @map("current_period_start")
  currentPeriodEnd   DateTime? @map("current_period_end")
  createdAt          DateTime  @default(now()) @map("created_at")
  updatedAt          DateTime  @updatedAt @map("updated_at")

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("subscriptions")
}

// Transfer model (updated with user relation)
model Transfer {
  id              String    @id @default(uuid())
  userId          String?   @map("user_id")
  title           String?
  message         String?
  senderEmail     String?   @map("sender_email")
  recipientEmails String?   @map("recipient_emails")
  passwordHash    String?   @map("password_hash")
  expiresAt       DateTime  @map("expires_at")
  createdAt       DateTime  @default(now()) @map("created_at")
  downloadCount   Int       @default(0) @map("download_count")
  totalSize       BigInt    @default(0) @map("total_size")
  status          String    @default("pending")

  user            User?     @relation(fields: [userId], references: [id], onDelete: SetNull)
  files           File[]

  @@index([expiresAt])
  @@index([userId])
  @@map("transfers")
}

model File {
  id             String    @id @default(uuid())
  transferId     String    @map("transfer_id")
  filename       String
  originalName   String    @map("original_name")
  size           BigInt
  mimeType       String    @map("mime_type")
  uploadOffset   BigInt    @default(0) @map("upload_offset")
  uploadComplete Boolean   @default(false) @map("upload_complete")
  createdAt      DateTime  @default(now()) @map("created_at")

  transfer       Transfer  @relation(fields: [transferId], references: [id], onDelete: Cascade)

  @@index([transferId])
  @@map("files")
}
